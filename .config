server {
    listen 8080;
    server_name webserv.com;

    root ./www;
    index index.html;

    error_page 404 /404.html;
	error_page 405 /405.html;

    location / {
        try_files $uri $uri/ =404;
    }

    location /private/ {
        root ./www/secret;
        index secret.html;
    }

    location /cgi-bin {
        root ./;
        allow_methods GET POST;
        cgi_ext .py;
        cgi_path /usr/bin/python3;
        cgi_timeout 10;
    }

    location /upload_here {
        allow_methods POST;
        upload_path ./www/uploads;
        client_max_body_size 10M;
    }

    location /folder.html {
        root ./www;
        index folder.html;
    }

    location /uploads/ {
        root ./www;
        autoindex on;
    }
}
